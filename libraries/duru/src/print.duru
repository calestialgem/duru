public proc print(string *Byte) {
  var result = print_string_to_stream(string, get_error_stream());
  if result < 0 {
    exit(result);
  }
}

extern "FILE"
struct Stream;

extern "__acrt_iob_func"
proc get_stream(index Natural32) *Stream;

extern "fputs"
proc print_string_to_stream(string *Byte, destination *Stream) Integer32;

proc get_error_stream() *Stream {
  return get_stream(2);
}
